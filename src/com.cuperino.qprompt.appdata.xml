<component type="desktop-application">
  <id>com.cuperino.qprompt</id>
  <launchable type="desktop-id">com.cuperino.qprompt.desktop</launchable>
  <name>QPrompt</name>
  <summary>Personal teleprompter software for all video creators</summary>
  <url type="homepage">https://qprompt.app</url>
  <url type="translate">https://l10n.qprompt.app</url>
  <url type="bugtracker">https://github.com/Cuperino/QPrompt/issues</url>
  <metadata_license>CC-BY-4.0</metadata_license>
  <project_license>GPL-3.0</project_license>
  <developer_name>Javier O. Cordero Pérez</developer_name>
  <update_contact>javiercorderoperez@gmail.com</update_contact>
  <description>
    <p>Open source personal teleprompter software for all video creators. Built with ease of use, fast performance, control accuracy, and cross-platform support in mind. QPrompt's convergent user interface can run on Linux, Windows, macOS, and Android.</p>
  </description>
  <screenshots>
    <screenshot type="default">
      <image>https://qprompt.app/assets/img/slider-1.png</image>
      <caption>Initial screen for the application</caption>
    </screenshot>
    <screenshot>
      <image>https://qprompt.app/assets/img/countdown.png</image>
      <caption>Countdown on stand-by</caption>
    </screenshot>
    <screenshot>
      <image>https://a.fsdn.com/con/app/proj/qprompt/screenshots/Screenshot_20211101_041017.png/max/max/1</image>
      <caption>Opaque background with video in the background, timers, and mirrored contents</caption>
    </screenshot>
  </screenshots>
  <provides>
    <binary>qprompt</binary>
    <mediatype>text/plain</mediatype>
    <mediatype>text/markdown</mediatype>
    <mediatype>text/html</mediatype>
  </provides>
</component>
